<?xml version="1.0" encoding="UTF-8"?>

<?import com.comp2042.GameOverPanel?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.comp2042.GuiController"
            prefHeight="700" prefWidth="900"
            style="-fx-background-color: #1a1a1a;">

    <center>
        <HBox alignment="CENTER" spacing="20">
            <!-- Left Side: HOLD Box -->
            <VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: transparent;">
                <padding>
                    <Insets top="50"/>
                </padding>

                <!-- HOLD Panel -->
                <VBox style="-fx-background-color: #000000; -fx-border-color: #ffffff; -fx-border-width: 3;">
                    <padding>
                        <Insets top="5" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label text="HOLD" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
                        <padding>
                            <Insets bottom="5"/>
                        </padding>
                    </Label>
                    <GridPane fx:id="holdPanel" hgap="0" vgap="0"
                              prefWidth="120" prefHeight="120"
                              style="-fx-background-color: #000000;"/>
                </VBox>

                <!-- Stats Panel -->
                <VBox alignment="TOP_LEFT" spacing="15" style="-fx-padding: 20;">
                    <Label fx:id="piecesLabel" text="PIECES"
                           style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Label fx:id="piecesValue" text="0"
                           style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>

                    <Label fx:id="linesLabel" text="LINES"
                           style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Label fx:id="linesValue" text="0/40"
                           style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>

                    <Label fx:id="timeLabel" text="TIME"
                           style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                    <Label fx:id="timeValue" text="0:00.000"
                           style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                </VBox>
            </VBox>

            <!-- Center: Game Board -->
            <StackPane>
                <GridPane fx:id="gamePanel"
                          hgap="0" vgap="0" layoutY="30" layoutX="40"
                          style="-fx-background-color: #000000; -fx-border-color: #ffffff; -fx-border-width: 3;"/>

                <GridPane fx:id="brickPanel"
                          hgap="0" vgap="0"
                          mouseTransparent="true"/>

                <Group fx:id="groupNotification" layoutX="14" layoutY="203"/>

                <VBox alignment="CENTER">
                <GameOverPanel fx:id="gameOverPanel"
                               visible="false"
                               style="-fx-background-color: rgba(0, 0, 0, 0.8);"/>
                </VBox>

            </StackPane>

            <!-- Right Side: NEXT Box -->
            <VBox alignment="TOP_CENTER" spacing="10" style="-fx-background-color: transparent;">
                <padding>
                    <Insets top="50"/>
                </padding>

                <VBox style="-fx-background-color: #000000; -fx-border-color: #ffffff; -fx-border-width: 3;">
                    <padding>
                        <Insets top="5" right="10" bottom="10" left="10"/>
                    </padding>
                    <Label text="NEXT" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;">
                        <padding>
                            <Insets bottom="5"/>
                        </padding>
                    </Label>

                    <!-- Next Brick Preview 1 -->
                    <GridPane fx:id="nextPanel1" hgap="0" vgap="0"
                              prefWidth="120" prefHeight="100"
                              style="-fx-background-color: #000000;">
                        <padding>
                            <Insets bottom="10"/>
                        </padding>
                    </GridPane>

                    <!-- Next Brick Preview 2 -->
                    <GridPane fx:id="nextPanel2" hgap="0" vgap="0"
                              prefWidth="120" prefHeight="100"
                              style="-fx-background-color: #000000;">
                        <padding>
                            <Insets bottom="10"/>
                        </padding>
                    </GridPane>

                    <!-- Next Brick Preview 3 -->
                    <GridPane fx:id="nextPanel3" hgap="0" vgap="0"
                              prefWidth="120" prefHeight="100"
                              style="-fx-background-color: #000000;">
                        <padding>
                            <Insets bottom="10"/>
                        </padding>
                    </GridPane>

                    <!-- Next Brick Preview 4 -->
                    <GridPane fx:id="nextPanel4" hgap="0" vgap="0"
                              prefWidth="120" prefHeight="100"
                              style="-fx-background-color: #000000;">
                        <padding>
                            <Insets bottom="10"/>
                        </padding>
                    </GridPane>

                    <!-- Next Brick Preview 5 -->
                    <GridPane fx:id="nextPanel5" hgap="0" vgap="0"
                              prefWidth="120" prefHeight="100"
                              style="-fx-background-color: #000000;"/>
                </VBox>
            </VBox>
        </HBox>
    </center>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</BorderPane>